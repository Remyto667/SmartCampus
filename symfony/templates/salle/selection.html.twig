{% extends 'base.html.twig' %}

{% block title %}Selection d'une salle{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { padding: 2px 6px; }

        body{
            text-align: center;
        }
        h1 {
            margin-top: 40px;
            text-decoration: underline;
        }
        h2 {
            margin-top: 40px;
            font-size: 30px;
        }
        h3 {
            margin-top: 20px;
            font-size: 20px;
        }

        /**** Buttons and colors ****/
        .btn
        {
            align-items: center;
        }
        .btn-div {
            justify-content: center;
            text-align: center;
            margin-bottom: 40px;
        }
        .blue {
            color: #fff;
            background-color: #00489a;
            border-color: #00489a;
            text-decoration: none;
            display: inline-block;
            font-weight: 400;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        }
        .red {
            color: #fff;
            background-color: #B51b1b;
            border: #B51b1b;
            text-decoration: none;
            display: inline-block;
            font-weight: 400;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out
        }
        .red:hover
        {
            background: #da0e0e;
        }


        a:hover {
            color : #FFFFFF;
        }
        .boxItem {
            width : 150px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
            column-gap: 500px;
            row-gap: 10px;

            padding: 10px;
            border: 1px solid grey;
            border-radius: 6px;
            box-shadow: 2px 2px 5px grey;
        }

        .boxItem:hover {
            box-shadow: 4px 4px 7px grey;
        }
        .content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            column-gap: 5000px;
            row-gap: 1px;
        }
        .line {
            display : flex;
            justify-content: space-around;
            column-gap: 50px;
        }


        /**** Legends ****/
        .legend
        {
            display: flex;
            justify-content: space-around;
        }
        .legendBlue
        {
            border-bottom: 3px solid blue;
            color: #00489a;

        }
        .legendRed
        {
            border-bottom: 3px solid red;
            color: #B51b1b;
        }
        .legendGrey
        {
            border-bottom: 3px solid grey;
            color : grey;
        }
    </style>

    <div class="example-wrapper">
        <h1>Liste des salles</h1>
        <h2>Choisissez une salle</h2>
        <h3>Pour voir la température, le CO2 et l'humidité actuel</h3>
        <br>
        <br>
        <div class="content">
            <!-- Loop for show all floors -->
            {% for floor in allFloor | reverse %}
                <!-- With an exception for floor 0 where we display : ground floor -->
                {% if floor=="0" %}
                    <p style="margin-top: 20px;"> Rez-de-chaussée : </p>
                {% else %}
                    <p style="margin-top: 20px;"> Etage {{ floor }} : </p>
                {% endif %}
                <div class="line">
                    {% for room in allRoom %}
                        <!-- All the rooms corresponding to the floor are displayed, without taking into account the stock -->
                        {% if (room.isIsStock() != 1) and (room.floor == floor) %}
                            <div class="boxItem" onclick="window.location='{{ room.id }}';">
                                {% if noData[room.getId] == 1 %}
                                    <!-- Show the room in grey if there are no data -->
                                    <a class="btn grey btn-danger" href="#">{{ room.name }}</a>
                                {% elseif (room.isAlert == true ) %}
                                    <!-- Show the room in red if there are one or more alerts -->
                                    <a class="btn red btn-danger" href="{{room.id }}">{{ room.name }}</a>
                                {% else %}
                                    <!-- Show the room in blue if there are no alert -->
                                    <a class="btn btn-primary blue" href="{{ room.id }}">{{ room.name }}</a>
                                {% endif %}
                            </div>
                        {% endif %}

                    {% endfor %}
                </div>
                <br>
                <br>
            {% endfor %}
            <br>

        </div>

        <div class="legend">
            <p class="legendBlue">Salle sans problèmes</p>
            <p class="legendGrey">Salle aux données non disponibles</p>
            <p class="legendRed">Salle avec Alerte(s)</p>
        </div>
        <br>

    </div>

    <div class="btn-div">
        <a class="btn blue btn-primary" href="/accueil" role="button">Retour</a>
    </div>

{% endblock %}



