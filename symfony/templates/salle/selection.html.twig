{% extends 'logo.html.twig' %}

{% block title %}Selection d'une salle{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    /* BOUTONS */
    .btn {
        color: #fff;
        background-color: #00489a;
        border-color: #00489a;
        text-decoration: none;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

    .red {
        color: #fff;
        background-color: #B51b1b;
        border: #B51b1b;
        text-decoration: none;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

    .grey {
        color: #fff;
        background-color: #808080;
        border: #808080;
        text-decoration: none;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }

    .cadre {
        /*max-width: 500px;*/
        margin-top: 100px;
        padding: 10px;
        border: 1px solid grey;
        border-radius: 6px;
        box-shadow: 2px 2px 5px grey;
    }
    .ligne{
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        column-gap: 30px;
    }
    .item-ligne{
        align-self: auto;
    }

    h1{
        text-align: center;
        margin-top: 100px;
    }

    .btn-div{
        justify-content: center;
        text-align: center;
    }
</style>

<div class="example-wrapper">
    <h1>Choisir une salle !</h1>
    <br>

    <div class="cadre">
        <div class="ligne">
            {% for floor in allFloor %}
                <div class="item-ligne">
                    <p> Etage {{ floor }} : </p>
                    {% for room in allRoom %}
                        {% if (room.isIsStock() != 1) and (room.floor == floor) %}
                            {% if temp == "NULL" or hum == "NULL" or co2 == "NULL" %}
                                <!--if((temp == "NULL" and hum == "NULL") or (hum == "NULL" and co2 == "NULL") or (temp == "NULL" and co2 == "NULL") or (temp == "NULL" and hum == "NULL" and co2 == "NULL"))-->
                                <a class="btn grey btn-danger" href="#">{{ room.name }}</a>
                            {% elseif (room.getTempAlert.isAlert == true or room.getCo2Alert.isAlert==true or room.getHumAlert.isAlert==true) %}
                                <a class="btn red btn-danger" href="{{ room.id }}">{{ room.name }}</a>
                            {% else %}
                                <a class="btn btn-primary blue" href="{{ room.id }}">{{ room.name }}</a>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}

        </div>
    </div>



</div>
    <div class="btn-div">
    <a class="btn btn-primary" href="/accueil" role="button">Retour</a>
    </div>
{% endblock %}
