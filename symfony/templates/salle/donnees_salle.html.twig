{% extends 'logo.html.twig' %}

{% block title %}Données d'une salle{% endblock %}

{% block body %}
    <style>
            /*.example-wrapper { text-align: center; margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
            .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }*/

        .body{
            height: 100%;
            font-family: arial;
            text-align: center;
        }

        /************************* TITRE **************************/
        .salle {
            margin-top: 100px;
            margin-left: 46%;
            transform: translateY(-50%);
            width: 200px;
        }
        .shape {
            stroke-dasharray: 140 540;
            stroke-dashoffset: -474;
            stroke-width: 8px;
            fill: transparent;
            stroke: #014898;
            transition: stroke-width 1s, stroke-dashoffset 1s, stroke-dasharray 1s;
        }
        .text {
            display: block;
            line-height: 32px;
            letter-spacing: 7px;
            top: -47px; /* Monter le text dans le rectangle plus haut */
            position: relative;
            text-align: center;
            font-size: 50px;
            justify-content: center;
        }
        .salle:hover .shape {
            stroke-width: 4px; /* Epaisseur du contour plus fine que avant */
            stroke-dashoffset: 0;
            stroke-dasharray: 800;
        }

        /************************* GRILLE **************************/
        .data-container{
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around; /* Espacé sans être collé aux bords */
            /*margin: 100px;*/
        }

        .box {
            border: 0.5px solid grey;
            border-radius: 8px;
            box-shadow: 2px 2px 5px grey;
            width: 250px;
        }

        .box:hover{
            /*color: #014898;
            font-size: 25px;*/
            box-shadow: 5px 5px 5px grey;
            text-shadow: 2px 2px 5px grey ;
        }

        .titreDonnee{
            font-size: 20px;
            /*padding: 10px;*/
        }

        .donnee{
            padding: 50px;
            font-size: 35px;
            border: 0.5px solid grey;
            border-radius: 8px;
            box-shadow: 2px 2px 5px grey;
        }

        /****** BOUTONS ALERTE ******/

        .boutonAlerte{
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin-top: 50px;
        }

        .boxBouton {
            /*border: 0.5px solid grey;
            border-radius: 8px;*/
            width: 250px;
        }

        /*************************/
        .description{
            display: flex;
            flex-wrap: wrap;
            justify-content: space-evenly;
            margin-top: 100px;
        }

        /********* EFFET *********/

        @keyframes box{
            0%,
            100%{
                transform: scale(1);
            }
            50%{
                transform: scale(1.3);
            }
        }


            {% if temp > room.getType().getTempMax() or temp < room.getType().getTempMin() %}
            .Temp {color: white; border: 1px solid black; background-color: #B51b1b;}
            .box:nth-child(1){
                transform: scale(1);
                animation: box 1s linear infinite;
            }
            {% endif %}
            {% if hum > room.getType().getHumMax() or hum < room.getType().getHumMin() %}
            .Hum {color: white; border: 1px solid black; background-color: #B51b1b;}
            .box:nth-child(2){
                transform: scale(1);
                animation: box 1s linear infinite;
            }
            {% endif %}
            {% if co2 >= room.getType().getCo2Min()  or co2 <= room.getType().getCo2Max() %}
            .C02 {color: white; border: 1px solid black; background-color: #B51b1b;}
            .box:nth-child(3){
                transform: scale(1);
                animation: box 1s linear infinite;
            }
            {% endif %}

        .btn{margin-top: 15px; background-color: #B51b1b; color: white; max-width: 250px;}
        .btn-blue{background-color: #00489a; color: white;}
    </style>

    <div class="body">

        <br>
        <div class="salle">
            <svg height="60" width="200" xmlns="http://www.w3.org/2000/svg">
                <rect class="shape" height="60" width="200" />
                <div class="text">{{ room.getName() }}</div>
            </svg>
        </div>
        <br>
        <div class="container">
            <div class="data-container">

                <div class="box">
                    <div class="titreDonnee">Température</div>
                    {% if temp != "NULL"%}

                        <div class="Temp donnee">{{ temp }} °C</div>
                        Date de relevé : {{ dateT }}
                    {% else %}
                        <div class="Temp donnee">Pas de<br>donnée</div>
                    {% endif %}
                </div>

                <div class="box">
                    <div class="titreDonnee">Humidité</div>
                    {% if hum != "NULL"%}

                        <div class="Hum donnee">{{ hum }} %</div>
                        Date de relevé : {{ dateH }}
                    {% else %}
                        <div class="Temp donnee">Pas de<br>donnée</div>
                    {% endif %}
                </div>
                <div class="box">
                    <div class="titreDonnee">CO2</div>
                    {% if co2 != "NULL"%}

                        <div class="C02 donnee">{{ co2 }} PPM</div>
                        Date de relevé : {{ dateC }}
                    {% else %}
                        <div class="Temp donnee">Pas de<br>donnée</div>
                    {% endif %}
                </div>
            </div>

            <div class="boutonAlerte">
                <div class="boxBouton">
                    {% if temp > 24 or temp < 16 and temp != "NULL" %}
                        {% if temp != "NULL" %}
                            <a class="btn red btn-lg" href="/salle/alerte/{{room.id}}/1 " role="button">Afficher les indications</a>
                        {% endif %}
                    {% endif %}
                </div>
                <div class="boxBouton">
                    {% if hum > 59 or hum < 41%}
                        {% if hum != "NULL" %}
                            <a class="btn red btn-lg" href="/salle/alerte/{{room.id}}/2" role="button">Afficher les indications</a>
                        {% endif %}
                    {% endif %}
                </div>
                <div class="boxBouton">
                    {% if co2 >= 800 %}
                        {% if co2 != "NULL" %}
                            <a class="btn red btn-lg" href="/salle/alerte/{{room.id}}/3" role="button" >Afficher les indications</a>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="boutonAlerte">
            <div class="boxBouton">
                {% if temp > 24 or temp < 16%}
                    <a class="btn btn-lg" href="/salle/alerte/{{id}}/1 " role="button" style="width:300px">Afficher les indications</a>
                {% endif %}
            </div>
            <div class="boxBouton">
                {% if hum > 59 or hum < 41%}
                    <a class="btn btn-lg" href="/salle/alerte/{{id}}/2" role="button" style="width:300px">Afficher les indications</a>
                {% endif %}
            </div>
            <div class="boxBouton">
                {% if co2 >= 800 %}
                    <a class="btn btn-lg" href="/salle/alerte/{{id}}/3" role="button" >Afficher les indications</a>
                {% endif %}
            </div>
        </div>
        </div>
        <div class="description">


            <div class="textSensor">
                <br><br>
                <ul>Des conseils vous seront donnés si :
                    <li>-16 °C / + 24 °C </li>
                    <li>-41 % / + 59% d'humidité </li>
                    <li>+ 800 PPM </li>
                </ul>
            </div>
        </div>
        <br>
        <a class="btn btn-blue btn-primary" href="/salle/selection" role="button">Retour</a>
    </div>
{% endblock %}
