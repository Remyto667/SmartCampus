{% extends 'logo.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>

    body{
        background-color: #f7f9fa;
    }
    .example-wrapper {
        margin: 225px auto;
        max-width: 800px;
        max-height: 600px;
        font: 18px/1.5 sans-serif;
    }
    label {
        display: inline-block;
    }
    .error-style{
        color : #B51b1b;
    }
    .btn{
        background-color: #00489a;
    }
</style>

<a href="javascript:history.go(-1)"> <img class="rounded logobot mx-auto d-block pure-menu-list " src="{{ asset('img/bouton_retour.png') }}"> </a>


<div class="example-wrapper">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex align-items-center justify-content-center h-50 ">
                <div class="col-md-8 col-lg-7 col-xl-6">
                    <img src="{{ asset('img/logo-zerocarbone.png') }}"
                         class="img-fluid" alt="Phone image">
                </div>
                <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1 ">
                    <form action=" {{path('app_login') }}" method="post">
                        <div class="form-outline mb-4">
                            <label class="form-label" for="username">Identifiant</label>
                            <input type="text" id="username" class="form-control form-control-lg" name="_username" value="{{ last_username }}"/>

                        </div>

                        <div class="form-outline mb-4">
                            <label class="form-label" for="pswd">Password</label>
                            <input type="password" id="pswd" class="form-control form-control-lg" name="_password"/>
                        </div>
                        {% if error %}
                        <div class="error-style">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }} ">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Se Connecter</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}