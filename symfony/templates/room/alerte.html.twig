{% extends 'base.html.twig' %}

{% block title %}Détail alerte{% endblock %}

{% block body %}
<style>
    .main { text-align: center; margin: 1em auto; max-width: 1200px; width: 95%; font: 18px/1.5 sans-serif;}
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .alerte_main{font-size: 150px; color: red;}
    .secondary_text{font-size: 100px; color: red;}
    .advice{font-size: 75px; color: black;}
    body{
        background-color: orange;
    }
</style>
    <div class="main">

        <div class="alerte_main">
            ALERTE
        </div>

        {% if id == 1 and temp > 24%}
            <div class="secondary_text">
                Temperature trop élévé
            </div>
            <div class="secondary_text">
                {{ temp }} °C
            </div>
            <div class="advice">
                Conseil
            </div>
        {% endif %}
        {% if id == 1 and temp < 16 %}
            <div class="secondary_text">
                Temperature trop basse
            </div>
            <div class="secondary_text">
                {{ temp }} °C
            </div>
            <div class="advice">
                Conseil
            </div>
        {% endif %}


        {% if id == 2 %}
            <a class="btn btn-lg" href="/salle/alerte/1" role="button" style="width:300px">hum</a>
        {% endif %}
        {% if id == 3 %}
            <a class="btn btn-lg" href="/salle/alerte/1" role="button" style="width:300px">co2</a>
        {% endif %}


        <a class="btn btn-lg" href="history.go(-1)" role="button" style="width:300px">Afficher les indications</a>
    </div>



{% endblock %}
