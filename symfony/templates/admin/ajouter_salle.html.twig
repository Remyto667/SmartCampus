{% extends 'basewithnavbar.html.twig' %}

{% block title %}Ajout d'une salle{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    body{
        background-color: #f7f9fa;
    }

    /* BOUTONS */
    .styled {
        color: #fff;
        background-color: #00489a;
        border-color: #00489a;
        text-decoration: none;

        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    }
    .error {
        color : rgba(195,31,41,0.9);
        font-size : 15px ;
        list-style-type : none;
    }
</style>

<div class="example-wrapper">
    <h1>Ajouter une salle !</h1>

    {{ form_start(form) }}
    <p>Nom de la salle : {{ form_widget(form.Name) }} <p/>
    <p>Nombre de fenÃªtre de la salle : {{ form_widget(form.windows_number) }} <p/>
    <p>Superficie de la salle (m2) : {{ form_widget(form.room_size) }} <p/>
    <p>Orientation de la salle : {{ form_widget(form.orientation) }} <p/>
    <p>Etage de la salle : {{ form_widget(form.floor) }} <p/>
    <p>Type de salle : {{ form_widget(form.type) }} <p/>
    <br/>
    <div class="error"> {{ form_errors(form) }} </div>
    <button class="btn btn-primary" type="submit">Enregistrer</button> <a class="btn btn-primary" href="/admin/inventaire/lister_salles" role="button">Retour</a>
    {{ form_end(form) }}


</div>
{% endblock %}
