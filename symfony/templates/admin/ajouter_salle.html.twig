{% extends 'basewithnavbar.html.twig' %}

{% block title %}Ajout d'une salle{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    body{
        background-color: #f7f9fa;
    }
    .error {
        color : rgba(195,31,41,0.9);
        font-size : 15px ;
        list-style-type : none;
    }
    p{
        font-size: 25px;
    }
    .title{
        font-size: 75px;
        text-decoration-line: underline;
        text-decoration-color: #00489a;
    }

    .btn:not(:disabled):not(.disabled) {
        cursor: pointer;
    }

    .btn-primary {
        color: #fff;
        background-color: #00489a;
        border-color: #00489a;
    }
</style>

<div class="example-wrapper">
    <p class="title">Ajouter une salle !</p>

    <br><br>

    {{ form_start(form) }}
    <p>Nom de la salle : {{ form_widget(form.Name, { 'attr': {'placeholder': "ex. D205"} }) }} <p/>

    <p>Nombre de fenÃªtre de la salle : {{ form_widget(form.windows_number, { 'attr': {'placeholder': "ex. 5"} }) }} <p/>

    <p>Superficie de la salle (m2) : {{ form_widget(form.room_size, { 'attr': {'placeholder': "ex. 45"} }) }} <p/>

    <p>Orientation de la salle : {{ form_widget(form.orientation) }} <p/>

    <p>Etage de la salle : {{ form_widget(form.floor, { 'attr': {'placeholder': "ex. 3"} }) }} <p/>

    <p>Type de salle : {{ form_widget(form.type) }} <p/>

    <br/>

    <div class="error"> {{ form_errors(form) }} </div>

    <button class="btn btn-primary" type="submit">Enregistrer la salle</button>
    <a class="btn btn-primary" href="/inventaire/lister_salles" role="button">Annuler</a>

    {{ form_end(form) }}


</div>
{% endblock %}
