{% extends 'base.html.twig' %}

{% block title %}Ajout de Capteur{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .table .thead-light th {
            color: #495057;
            background-color: #e9ecef;
            border-color: #dee2e6;
        }
        .table td, .table th {
            padding: 0.75rem;
            vertical-align: top;
            border-top: 1px solid #dee2e6;
        }
        .btn:not(:disabled):not(.disabled) {
            cursor: pointer;
        }

        .btn-primary {
            color: #fff;
            background-color: #00489a;
            border-color: #00489a;
        }
        .btn {
            display: inline-block;
            font-weight: 400;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            border: 1px solid transparent;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        }
        .error {
            color : rgba(195,31,41,0.9);
            font-size : 15px ;
        }
    </style>

    <div class="example-wrapper">
        <!-- include bar de menu qui devrait être dans un .html -->

        <h1> Ajouter un Capteur </h1>

        {{ form_start(form) }}
        <p>Nom du capteur : {{ form_widget(form.Name) }} <p/>

        <p>Type du capteur : {{ form_widget(form.type) }}<p/>

        <p>Etat du capteur : {{ form_widget(form.state) }} <p/>

        <p>Système du capteur : {{ form_widget(form.systems) }} <p/>
        <br/>

        <div class="error"> {{ form_errors(form) }} </div>

        <button class="btn btn-primary" type="submit">Enregistrer le Capteur</button>

        <a class="btn btn-primary" href="/admin/inventaire/lister_capteurs" role="button">Annuler</a>

        {{ form_end(form) }}
    </div>
{% endblock %}
