{% extends 'basewithnavbar.html.twig' %}

{% block title %}Selection d'une salle{% endblock %}

{% block body %}
    <style>
        /************** CSS **************/
        /**** General characteristics ****/
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

        body{
            text-align: center;
            margin-left: 180px;
        }
        h1 {
            margin-top: 100px;
        }
        h2 {
            margin: 30px;
            font-size: 20px;
        }

        /**** Buttons and colors ****/
        .btn
        {
            align-items: center;
        }
        .blue {
            color: #fff;
            background-color: #00489a;
            border-color: #00489a;
            text-decoration: none;
            display: inline-block;
            font-weight: 400;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        }
        .red {
            color: #fff;
            background-color: #B51b1b;
            border: #B51b1b;
            text-decoration: none;
            display: inline-block;
            font-weight: 400;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out
        }
        .red:hover
        {
            background: #da0e0e;
        }

        a:hover {
            color : #FFFFFF;
        }

        /**** Organization of the page ****/
        .content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            column-gap: 5000px;
            row-gap: 1px;
        }
        .line {
            display : flex;
            justify-content: space-around;
            column-gap: 50px;
        }

        /**** Outlines for each room ****/
        .boxItem {
            width : 150px;
            height: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
            column-gap: 500px;
            row-gap: 10px;

            padding: 10px;
            border: 1px solid grey;
            border-radius: 6px;
            box-shadow: 2px 2px 5px grey;
        }

        .boxItem:hover {
            box-shadow: 4px 4px 7px grey;
        }

        /**** Legends ****/
        .legend
        {
            display: flex;
            justify-content: space-around;
            margin-top: 50px;
        }
        .legendBlue
        {
            border-bottom: 3px solid blue;
            color: #00489a;

        }
        .legendRed
        {
            border-bottom: 3px solid red;
            color: #B51b1b;
        }
        .text{
            text-align: center;
        }

    </style>

    <div class="example-wrapper">
        <h1>Choisir une salle pour voir le détail de alertes</h1>
        <h2>Vous pouvez voir le nombre d'alertes détectées au cours du dernier mois</h2>
        <div class="content">
            <!-- For each floor, we display each room and the number of alerts -->
            {% for floor in allFloor | reverse %}
                <!-- With an exception for floor 0 where we display : ground floor -->
                {% if floor=="0" %}
                    <p style="margin-top: 20px;"> Rez-de-chaussée : </p>
                {% else %}
                    <p style="margin-top: 20px;"> Etage {{ floor }} : </p>
                {% endif %}
                <div class="line">
                    {% for room in allRoom %}
                        <!-- All the rooms corresponding to the floor are displayed, without taking into account the stock -->
                        {% if (room.isIsStock() != 1) and (room.floor == floor) %}
                            <div class="boxItem" onclick="window.location='/admin/alerteStat/{{ room.id }}';">
                                {% if nbAlert[room.getId()]["T"] + nbAlert[room.getId()]["H"] + nbAlert[room.getId()]["H"]  > 1000 %}
                                    <!-- Display the name of the room in red -->
                                    <a class="btn red btn-danger" href="/admin/alerteStat/{{ room.id }}">{{ room.name }}</a>
                                {% else %}
                                    <!-- Display the name of the room in blue if currently there is no alert -->
                                    <a class="btn btn-primary blue" href="/admin/alerteStat/{{ room.id }}">{{ room.name }}</a>
                                {% endif %}
                                <!-- Display the total number of alerts corresponding to the room -->
                                <p class="text">{{ nbAlert[room.getId()]["T"] + nbAlert[room.getId()]["H"] + nbAlert[room.getId()]["H"] }} alertes</p>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>

        <div class="legend">
            <p class="legendBlue">Salle sans problèmes</p>
            <p class="legendRed">Salle avec Alerte(s)</p>
        </div>

    </div>
{% endblock %}